#include <stdint.h>
#include <stddef.h>

int main() {
    return
        sizeof( @BLAS_SIZE_T@ ) > sizeof( @BLAS_INT_T@ )
            ? sizeof( @BLAS_SIZE_T@ )
            : sizeof( @BLAS_INT_T@ );
}